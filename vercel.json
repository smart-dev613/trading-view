{
    "version": 2,
    "buildCommand": "npm run install:all && npm run build:all",
    "outputDirectory": "frontend/.next",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next",
            "config": {
                "outputDirectory": "frontend/.next"
            }
        },
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "functions": {
        "backend/src/index.js": {
            "maxDuration": 30
        }
    }
}
